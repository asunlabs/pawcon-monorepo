{
  "name": "pawcon-blockchain",
  "version": "0.3.0",
  "description": "Blockchain development for pawcon project",
  "keywords": [
    "ERC20",
    "ERC721",
    "ERC777",
    "ERC1155",
    "Upgradeable",
    "Ethereum",
    "Dapp",
    "Mint",
    "Swap"
  ],
  "license": "Apache-2.0",
  "author": {
    "name": "Jake Sung",
    "email": "nellow1102@gmail.com",
    "url": "https://github.com/developerasun/pawcon"
  },
  "main": "index.ts",
  "scripts": {
    "compile": "pnpm exec hardhat compile",
    "test:unit:dev": "pnpm compile & nodemon -w test --exec mocha -g \"unit\" --slow 2000  --reporter list",
    "test:integ:dev": "pnpm compile & nodemon -w test --exec mocha -g \"integ\" --slow 2000  --reporter list",
    "tests:dev": "pnpm compile & nodemon -w test --exec mocha --slow 2000  --reporter list",
    "doc": "pnpm exec hardhat docgen",
    "format": "prettier --write --plugin=prettier-plugin-solidity \"**/*.{ts,sol,js,mjs,cjs}\"",
    "lint": "pnpm exec hardhat check",
    "inspect:log": "pnpm exec hardhat remove-logs",
    "inspect:static": "slither . --print human-summary",
    "inspect:size": "pnpm exec hardhat size-contracts",
    "expect": "pnpm exec hardhat cherry-pick",
    "clean": "pnpm exec hardhat clean",
    "clean:cov": "pnpm exec hardhat clean-coverage",
    "cov": "pnpm clean:cov & pnpm exec hardhat coverage",
    "ci:prepare": "pnpm inspect:log & pnpm inspect:size",
    "ci:unit": "pnpm exec hardhat test --grep \"unit\"",
    "ci:integ": "pnpm exec hardhat test --grep \"integ\"",
    "ci:tests": "pnpm ci:prepare & pnpm ci:unit & pnpm ci:integ"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.5.1",
    "@defi-wonderland/smock": "^2.2.0",
    "@ethersproject/abi": "^5.0.0",
    "@ethersproject/abstract-provider": "5",
    "@ethersproject/abstract-signer": "5",
    "@ethersproject/bytes": "^5.0.0",
    "@ethersproject/providers": "^5.0.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.3",
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-solhint": "^2.0.1",
    "@openzeppelin/contracts": "^4.6.0",
    "@openzeppelin/contracts-upgradeable": "^4.7.0",
    "@openzeppelin/hardhat-upgrades": "^1.19.0",
    "@typechain/ethers-v5": "10.1.0",
    "@typechain/hardhat": "6.1.3",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.19",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "alchemy-sdk": "^2.0.3",
    "async": "^3.2.4",
    "chai": "^4.3.6",
    "chalk": "5.1.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^4.2.1 || ^5.0.0",
    "ethers": "^5.6.9",
    "hardhat": "^2.9.9",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-log-remover": "^2.0.2",
    "install": "^0.13.0",
    "lodash": "^4.17.15",
    "mocha": "^10.0.0",
    "node-html-parser": "6.1.0",
    "nodemon": "^2.0.15",
    "prettier": ">=2.0.0",
    "prettier-plugin-solidity": "1.0.0-beta.24",
    "solidity-coverage": "^0.7.21",
    "solidity-docgen": "0.6.0-beta.27",
    "ts-node": "^10.8.1",
    "typechain": "8.1.0",
    "typescript": "^4.7.4"
  },
  "packageManager": "pnpm@7.5.0",
  "engines": {
    "node": ">=16.17.0"
  }
}
